<div class="text-center blog">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>Comments</p> 
  {{#each comments as |comment|}}
  <div>
    {{comment.comment}} - {{user.name}}
  </div> 
  {{/each}}
  <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-desc">Comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn button btn-primary">Post Comment</button>
      </div>
    </form>
</div>
<script src="/js/comment.js"></script>